{% extends 'base.html' %}

{% block body %}
    <h1 style="width: 100%">{% block title %} Add a New Reagent {% endblock %}</h1>
    <form method="post">
        <p>
            <label for="name">Name</label>
            <input type="text" name="name"
                   placeholder="Name">
            </input>
        </p>

        <p>
            <label for="location">Location</label>
            <input type="text" name="location"
                   placeholder="Location">
            </input>
        </p>

        <label for="notes">Notes</label>
        <br>
        <textarea name="notes"
                  placeholder="Notes"
                  rows="15"
                  cols="60"
                  ></textarea>
        </p>
        <p>
            <button type="submit">Submit</button>
        </p>
    </form>
{% endblock %}
